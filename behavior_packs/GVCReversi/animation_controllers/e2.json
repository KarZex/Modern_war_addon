{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.e2": {
      "states": {
        "default": {
          "transitions": [
            { "riding": "query.has_rider" }
          ],
          "on_entry": [
            "/ride @s[family=monster] summon_rider addon:ga T2",
			"/ride @s[family=player] summon_rider addon:ca T2"
          ]
        },
        "riding": {
          "transitions": [
            { "nriding": "!query.has_rider" }
          ],
          "on_entry": [
            "/effect @s[tag=!tank] resistance 99999 1 true",
			"/tag @s add tank"
          ]
        },
        "nriding": {
          "transitions": [
            { "riding": "query.has_rider" }
          ],
          "on_entry": [
            "/event entity @s players"
          ]
        }
      }
    }
  }
}